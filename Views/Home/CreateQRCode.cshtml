@model GenerateQRCode.Models.QRCodeModel

@{
    ViewData["Title"] = "CreateQRCode";
}

<h1>CreateQRCode</h1>

<h4>QRCodeModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateQRCode">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QRText" class="control-label"></label>
                <input asp-for="QRText" class="form-control" />
                <span asp-validation-for="QRText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                <div class="form-group">
                    <img src="@ViewBag.QrCodeUri" class="img-thumbnail" />
                </div>
            </div>
            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
